#tuples
my_tuple = (10, 20, 30, 40, 50, 60)

# Slice from index 1 to 4 (20 to 50, excluding index 5)
print(my_tuple[1:5])      

# Slice from start to index 3
print(my_tuple[:4])      

# Slice from index 2 to end
print(my_tuple[2:])       

# Slice with step
print(my_tuple[::2])     

# Slice in reverse
print(my_tuple[::-1])    

#slice from index -6 to end
print(my_tuple[-6:])

#slice from start to index -1
print(my_tuple[:-1])

#slice from start to end with a step(start:stop:step)

print(my_tuple[0:5:2])
print(my_tuple[0:6:2])

#tuple methods
tup = (2,1,3,1)
#tup.index(element)
print(tup.index(2))
print(tup.index(1))
print(tup.index(3))

#tup.count(element)
print(tup.count(2))
print(tup.count(1))
print(tup.count(3))

#tuple operations
#concatenation
a=(1,2)
b=(3,4)
print(a+b)

#Repeat
print(a*4)
print(b*3)
