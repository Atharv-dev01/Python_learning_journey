#conditional statements:(if,elif and else)

#Project 1:
# Step 1: Register
real_username = "Atharv"
real_password = "Secret123"

# Step 2: Input from user
username = input("Enter your username: ").strip().lower()
password = input("Enter your password: ").strip()

# Step 3: Check username
if username == real_username.lower():
    
    # Step 4: Check password
    if len(password) < 6:
        print("âŒ Password too short!")
    
    elif "password" in password.lower():
        print("âŒ Weak password: cannot contain the word 'password'.")

    elif password == real_password:
        print("âœ… Login successful!")
        print("ðŸ”’ Your password length was", len(password), "characters.")
        print("ðŸ”‘ Password masked as:", "*" * len(password))
    
    else:
        print("âŒ Wrong password.")
else:
    print("âŒ Username not found.")
    
    
#project 2:    
# A fixed number to guess
secret_number = 9

# Ask user to guess
guess = int(input("Guess the number (between 1 to 10): "))

# Check the guess
if guess == secret_number:
    print("ðŸ¥³ Correct! You guessed it right.")
elif guess > secret_number:
    print("Too high! Try a smaller number.")
else:
    print("Too low! Try a bigger number.")



#nesting(if under if condition)
age=int(input("enter age"))
if age >= 18:
    if age >= 80:
        print("cannot drive")
        
    else:
        print("can drive")
        
else:
    print("cannot drive")
